    "express": "^4.17.1",
    "http-status-codes": "^2.1.4",
    "mysql2": "^3.4.2",
    "sequelize": "^6.3.3",
    "supertest": "^6.3.3",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.7",
    "@types/jest": "^26.0.14",
    "@types/node": "^15.14.9",
    "@types/supertest": "^2.0.12",
    "@types/validator": "^13.1.0",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "eslint": "^7.4.0",
    "jest": "^26.1.0",
